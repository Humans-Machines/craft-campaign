{% set itemName = itemName ?? 'items' %}
{% set order = order ?? 3 %}
{% set sort = sort ?? 'desc' %}

{% js %}
    new Campaign.DataTable({
        id: '{{ id }}',
        placeholder: '{{ 'Search'|t('app') }}',
        options: {
            {# https://datatables.net/reference/button/ #}
            dom: 'lfBrtip',
            buttons: [
                {
                    extend: 'csv',
                    className: 'btn export_button',
                    text: '{{ 'Export to CSV'|t('campaign') }}'
                },
            ],
            language: {
                lengthMenu: '_MENU_ {{ itemName }}',
                info: '{{ '{first}-{last} of {total}'|t('app', {
                    first: '_START_',
                    last: '_END_',
                    total: '_TOTAL_',
                }) }} {{ itemName }}',
                infoEmpty: '{{ '{first}-{last} of {total}'|t('app', {
                    first: 0,
                    last: 0,
                    total: 0,
                }) }} {{ itemName }}',
                infoFiltered: '',
                zeroRecords: '',
                search: '',
                paginate: {
                    next: '{{ 'Next Page'|t('app') }}',
                    previous: '{{ 'Previous Page'|t('app') }}',
                },
            },
            order: [[ {{ order }}, '{{ sort }}' ]],
        },
    });
{% endjs %}
