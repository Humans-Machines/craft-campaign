{% extends 'campaign/reports/_layout' %}

{% set campaign = craft.campaign.getCampaignById(campaignId) %}
{% set title = campaign.title %}
{% set crumbs = [
    { label: 'Campaigns'|t('campaign'), url: url('campaign/reports/campaigns') }
] %}


{% block pageTitle %}
    {{ parent() }}
    {% if currentUser.can('campaign:campaigns') %}
        <a href="{{ campaign.cpEditUrl }}" class="btn">{{ 'Edit'|t('campaign') }}</a>
    {% endif %}
{% endblock %}


{% block content %}

    {% include 'campaign/reports/campaigns/_includes/report' %}

{% endblock %}
