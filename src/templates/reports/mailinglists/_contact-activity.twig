{% extends 'campaign/reports/_layout' %}

{% set mailingList = craft.campaign.getMailingListById(mailingListId) %}
{% set title = 'Contact Activity'|t('campaign') %}

{% set crumbs = [
    { label: 'Mailing Lists'|t('campaign'), url: url('campaign/reports/mailinglists') },
    { label: mailingList.title, url: mailingList.reportUrl }
] %}


{% block content %}

    {% set interaction = craft.app.request.param('interaction') %}
    {% include 'campaign/reports/mailinglists/_includes/contact-activity' with { contactActivity: craft.campaign.reports.getMailingListContactActivity(mailingListId, interaction) } %}

{% endblock %}