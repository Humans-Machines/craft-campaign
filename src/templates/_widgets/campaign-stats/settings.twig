{% import "_includes/forms" as forms %}

{{ forms.selectField({
    label: 'Date Range'|t('campaign'),
    name: 'dateRange',
    value: widget.dateRange,
    options: dateRangeOptions,
    errors: widget.getErrors('dateRange'),
}) }}

{{ forms.selectField({
    label: 'Campaign Type'|t('campaign'),
    name: 'campaignTypeId',
    value: widget.campaignTypeId,
    options: campaignTypeOptions,
    errors: widget.getErrors('campaignTypeId'),
}) }}

{% namespace 'visibility' %}
    {{ forms.lightswitchField({
        label: 'Show Campaigns'|t('campaign'),
        name: 'campaigns',
        on: widget.visibility.campaigns,
    }) }}

    {{ forms.lightswitchField({
        label: 'Show Sendouts'|t('campaign'),
        name: 'sendouts',
        on: widget.visibility.sendouts,
    }) }}

    {{ forms.lightswitchField({
        label: 'Show Recipients'|t('campaign'),
        name: 'recipients',
        on: widget.visibility.recipients,
    }) }}

    {{ forms.lightswitchField({
        label: 'Show Open Rate'|t('campaign'),
        name: 'openRate',
        on: widget.visibility.openRate,
    }) }}

    {{ forms.lightswitchField({
        label: 'Show Click Rate'|t('campaign'),
        name: 'clickRate',
        on: widget.visibility.clickRate,
    }) }}
{% endnamespace %}
