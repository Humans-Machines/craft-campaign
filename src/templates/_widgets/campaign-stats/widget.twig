<div class="campaign-widget">
    {% if visibility.campaigns %}
        <div class="number">
            {{ campaigns }}
        </div>
        {{ '{num, plural, =1{campaign} other{campaigns}}'|t('campaign', { num: campaigns }) }}
        <br><br>
    {% endif %}
    {% if visibility.sendouts %}
        <div class="number">
            {{ sendouts }}
        </div>
        {{ '{num, plural, =1{sendout} other{sendouts}}'|t('campaign', { num: sendouts }) }}
        <br><br>
    {% endif %}
    {% if visibility.recipients %}
        <div class="number">
            {{ recipients }}
        </div>
        {{ '{num, plural, =1{recipient} other{recipients}}'|t('campaign', { num: recipients }) }}
        <br><br>
    {% endif %}
    {% if visibility.openRate %}
        <div class="number">
            {{ openRate }}%
        </div>
        {{ 'open rate'|t('campaign') }}
        <span class="info">
            {{ 'Open Rate is calculated by dividing the number of contacts that opened an email by the number of contacts that received the email.'|t('campaign') }}
        </span>
        <br><br>
    {% endif %}
    {% if visibility.clickRate %}
        <div class="number">
            {{ clickRate }}%
        </div>
        {{ 'click rate'|t('campaign') }}
        <span class="info">
            {{ 'Click Rate is calculated by dividing the number of contacts that clicked on a link in an email by the number of contacts that opened the email.'|t('campaign') }}
        </span>
    {% endif %}
</div>
