{% import "_includes/forms" as forms %}

{{ forms.selectField({
    label: 'Date Range'|t('campaign'),
    name: 'dateRange',
    value: widget.dateRange,
    options: dateRangeOptions,
    errors: widget.getErrors('dateRange'),
}) }}

{{ forms.selectField({
    label: 'Mailing List Type'|t('campaign'),
    name: 'mailingListTypeId',
    value: widget.mailingListTypeId,
    options: mailingListTypeOptions,
    errors: widget.getErrors('mailingListTypeId'),
}) }}

{% namespace 'visibility' %}
    {{ forms.lightswitchField({
        label: 'Show Mailing Lists'|t('campaign'),
        name: 'mailingLists',
        on: widget.visibility.mailingLists,
    }) }}

    {{ forms.lightswitchField({
        label: 'Show Subscribed'|t('campaign'),
        name: 'subscribed',
        on: widget.visibility.subscribed,
    }) }}

    {{ forms.lightswitchField({
        label: 'Show Unsubscribed'|t('campaign'),
        name: 'unsubscribed',
        on: widget.visibility.unsubscribed,
    }) }}

    {{ forms.lightswitchField({
        label: 'Show Complained'|t('campaign'),
        name: 'complained',
        on: widget.visibility.complained,
    }) }}

    {{ forms.lightswitchField({
        label: 'Show Bounced'|t('campaign'),
        name: 'bounced',
        on: widget.visibility.bounced,
    }) }}
{% endnamespace %}
