{% extends '_layouts/elementindex' %}

{% do craft.campaign.requirePro() %}

{% set elementType = 'putyourlightson\\campaign\\elements\\SegmentElement' %}
{% set canHaveDrafts = true %}
{% set title = 'Segments'|t('campaign') %}
{% set selectedSubnavItem = 'segments' %}

{% do view.registerTranslations('campaign', [
    'New segment',
    'New {segmentType} segment',
]) %}


{% if segmentType is defined %}
    {% js %}
        window.defaultSegmentTypeHandle = '{{ segmentType|e('js') }}';
    {% endjs %}
{% endif %}
